{
  "name": "veleco-backend",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run index.ts",
    "build": "prisma generate --schema=./db/prisma/schema.prisma && tsc -p tsconfig.json",
    "vercel-build": "npm run build",
    "start": "node dist/index.js",
    "db": "bunx prisma migrate dev --schema=./db/prisma/schema.prisma",
    "generate": "prisma generate --schema=./db/prisma/schema.prisma",
    "db:deploy": "prisma migrate deploy --schema=./db/prisma/schema.prisma",
    "db:push": "prisma db push --schema=./db/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema=./db/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@prisma/extension-accelerate": "^1.1.0",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/node": "^5.3.21",
    "@vercel/postgres": "^0.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.3.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "otpauth": "^9.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.13",
    "@types/nodemailer": "^6.4.15",
    "prisma": "^6.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
